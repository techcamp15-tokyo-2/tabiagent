            <EditText
                android:id="@+id/register_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/register_gender"
                android:layout_alignLeft="@+id/register_gender"
                android:ems="10"
                android:hint="@string/prompt_city" />

            <EditText
                android:id="@+id/register_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/register_city"
                android:layout_alignLeft="@+id/register_city"
                android:ems="10"
                android:hint="@string/prompt_country" />

            <EditText
                android:id="@+id/register_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/register_country"
                android:layout_alignLeft="@+id/register_country"
                android:ems="10"
                android:hint="@string/prompt_name" />

            <EditText
                android:id="@+id/register_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/register_name"
                android:layout_alignLeft="@+id/register_name"
                android:ems="10"
                android:hint="@string/prompt_nickname" >
            </EditText>

            <EditText
                android:id="@+id/register_confirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/register_nickname"
                android:layout_alignLeft="@+id/register_nickname"
                android:ems="10"
                android:hint="@string/prompt_confirmPassword"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/register_confirmPassword"
                android:layout_alignLeft="@+id/register_confirmPassword"
                android:ems="10"
                android:hint="@string/prompt_password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/register_password"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:hint="@string/prompt_email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/register_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/register_button"
                android:layout_alignLeft="@+id/register_button"
                android:ems="10"
                android:hint="@string/prompt_gender" />

            <Button
                android:id="@+id/register_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/register_email"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="32dp"
                android:background="@drawable/selector_btn"
                android:onClick="clickToRegister"
                android:padding="10dp"
                android:text="Register" />

</RelativeLayout>
